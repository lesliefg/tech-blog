  <div class="column is-three-quarters">
    <div class="card is-four-fifths">
      <div class="card-content">
        <div class="content">
          <div class="field">
            <label class="label">Title</label>
            <div class="control">
              <input id="title" class="input" type="text" placeholder="Text input" value="{{post.postTitle}}" />
            </div>
          </div>

          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input id="username" class="input" type="text" value="{{username}}" disabled/>
            </div>
          </div>
          
          <div class="field">
            <label class="label">Post ID</label>
            <div class="control">
              <input id="postId" class="input" type="text" value="{{post.id}}" disabled/>
            </div>
          </div>

          <div class="field">
            <label class="label">Post Body</label>
            <div class="control">
              <textarea id="content" class="textarea" placeholder="Textarea">{{post.postContent}}</textarea>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <button id="save" class="button is-link">Save Post</button>
            </div>
            <div class="control">
              <button id="delete" class="button is-danger">Delete Post</button>
            </div>
            <div class="control">
              <button id="cancel" class="button is-link is-light">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/editPost.js"></script>